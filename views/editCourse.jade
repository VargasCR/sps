doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Sarapiqui Paddle Sports
    link(rel="stylesheet", href="/assets/css/bootstrap.min.css")
    link(rel="stylesheet", href="/assets/css/all.min.css")
    link(rel="stylesheet", href="/assets/css/owl.carousel.min.css")
    link(rel="stylesheet", href="/assets/css/owl.carousel.css")
    link(rel="stylesheet", href="/assets/css/style.css")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet")
  body
    //- ======================header started======================
    header(style="background: rgba(0, 33, 71, 0.9) !important;")
      .my-nav(style="background: rgba(0, 33, 71, 0.9) !important;")
        .container
          .row
            .nav-items
              .menu-toggle
              .logo
                img(src="/images/logo.png" style="width:5rem;")
              .menu-items
                .menu
                  ul
                    li
                      a(href=`/profile/admin/courses?ee11cbb19052e40b07aac0ca060c23ee=${id}`) - Cursos
                    li
                      a(href=`/admin-student-list?ee11cbb19052e40b07aac0ca060c23ee=${id}`) - Certificados
                    li
                      a(href=`/profile/admin/users?ee11cbb19052e40b07aac0ca060c23ee=${id}`) - Usuarios
                    li
                      a(href=`/login`) - Salir
                    li.img-profile(style="")
                      form(action="/upload", method="post", enctype="multipart/form-data" style="width:60px;")
                        input(type="hidden", name="id", value=id)
                        label.custom-file-upload(for="file-upload")
                            input#file-upload(type="file" name="file" onchange="handleFileChange(this)")
                            img(src=`/uploads/${foto}`, alt="Avatar" style="")
                        button#guardar-btn(type="submit", style="display: none;width: 100%;") Guardar
    br
    br
    br
    br
    br
    a(href=`/profile/admin/courses?ee11cbb19052e40b07aac0ca060c23ee=${id}` class="btn-nav") BACK 
    div(style="display:flex;justify-content:center;aling-items:center;")
      form.form_main(action=`/profile/admin/courses/edit?ee11cbb19052e40b07aac0ca060c23ee=${id}`, method="POST", enctype="multipart/form-data")
        input(type="hidden", name="id" value=id)
        input(type="hidden", name="activo" value=`${curso.activo}`)
        input(type="hidden", name="cid" value=cid)
        input(type="hidden", name="inscritos" value=curso.inscritos)
        input(type="hidden", name="verificado" value=curso.verificado)
        p.heading Edit Course
        if codigoError == 1
          div.alert.reject
            p COMPLETE TODOS LOS ESPACIOS
        if codigoError == 0
          div.alert.resolve
            p CURSO ACTUALIZADO CORRECTAMENTE
        div.inputContainer
          label Curso:
          select.inputField(name="curso")
            each cursox in cursos
              if cursox.id == curso.curso
                option(value=cursox.id selected) #{cursox.nombre}
              else
                option(value=cursox.id) #{cursox.nombre}
        div.inputContainer
          label ¿Curso de Instructor?
          select.inputField(name="isInstructor")
            option(value="false" selected=curso.isInstructor == 'false') No
            option(value="true" selected=curso.isInstructor == 'true') Sí
        div.inputContainer
          label ¿Curso Publico?
          select.inputField(name="isPublic")
            option(value="false" selected=curso.isPublic == 'false') No
            option(value="true" selected=curso.isPublic == 'true') Sí
        div.inputContainer
          label Titulo:
          input.inputField(name="titulo" type="text" placeholder="Titulo" value=curso.titulo)
        div.inputContainer
          label Imagen Actual:
          if curso.file
            img(src=`/uploads/${curso.file}`, alt="Imagen actual", style="width: 150px;")
          else
            p No hay imagen
        div.inputContainer
          label Cambiar Imagen:
          input.inputField(type="file" name="file")
        div.inputContainer
          label Instructor:
          select.inputField(name="instructor")
            each instructor in instructors
              if instructor.id == curso.instructor
                option(value=instructor.id selected) #{instructor.nombre} #{instructor.apellidos}
              else
                option(value=instructor.id) #{instructor.nombre} #{instructor.apellidos}
        div.inputContainer
          label Fecha de Inicio:
          input.inputField(name="inicio" type="date" value=curso.inicio)
        div.inputContainer
          label Fecha de Finalización:
          input.inputField(name="final" type="date" value=curso.final)
        div.inputContainer
          label Ubicación:
          input.inputField(name="location" type="text" placeholder="Ubicación" value=curso.location)
        div.inputContainer
            label Description:
            textarea.inputField(name="desc" type="textarea" style="height: 120px;" placeholder="Description") #{curso.desc}
        button#button(type="submit") Guardar
    //- ====================== Footer Section started======================
    a(href="https://api.whatsapp.com/send?phone=50660437366", class="btnWhatsapp", id="btnWhatsapp", target="_blank")
      img(src="https://www.freepnglogos.com/uploads/whatsapp-logo-png-transparent-33.png", style="width:100%", alt="whatsapp button")
    footer
      .container
        .row
          .col-lg-3.col-md-3.col-sm-6.col-12
            .__kl_de_w
              h3 SARAPIQUI PADDLE SPORT
              p Come discover the best water adventures in Costa Rica with Sarapiquí Paddle Sports.
          .col-lg-3.col-md-3.col-sm-6.col-12
            .__kl_de_w
              h3 Quick Links
              ol
                li(style="text-align:center;margin-top:1rem;")
                  i.fa-solid.fa-angle-right
                    a(href=`/profile/admin/courses?ee11cbb19052e40b07aac0ca060c23ee=${id}` style="color:white;font-family:Font Awesome 6 Free;text-transform:none;font-size: 1rem;")  Cursos
                li(style="text-align:center;margin-top:1rem;")
                  i.fa-solid.fa-angle-right
                    a(href=`/profile/admin/users?ee11cbb19052e40b07aac0ca060c23ee=${id}` style="color:white;font-family:Font Awesome 6 Free;text-transform:none;font-size: 1rem;")  Usuarios
                li(style="text-align:center;margin-top:1rem;")
                  i.fa-solid.fa-angle-right
                    a(href=`/login` style="color:white;font-family:Font Awesome 6 Free;text-transform:none;font-size: 1rem;")  Salir
          .col-lg-3.col-md-3.col-sm-6.col-12
            .__kl_de_w
              h3 Contact Us
              form#emailForm
                .form-group
                  input(type="email", name="email", placeholder="Your Email", required)
                .form-group
                  textarea(name="text", placeholder="Message")
                .form-group  
                  button(type="submit") Submit
          .col-12
            .copy-right
              p © 2024 Sarapiqui Paddle Sports
