doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Sarapiqui Paddle Sports
    link(rel="stylesheet", href="/assets/css/bootstrap.min.css")
    link(rel="stylesheet", href="/assets/css/all.min.css")
    link(rel="stylesheet", href="/assets/css/owl.carousel.min.css")
    link(rel="stylesheet", href="/assets/css/owl.carousel.css")
    link(rel="stylesheet", href="/assets/css/style.css")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet")
  body
    //- ======================header started======================
    header(style="background: rgba(0, 33, 71, 0.9) !important;")
      .my-nav(style="background: rgba(0, 33, 71, 0.9) !important;")
        .container
          .row
            .nav-items
              .menu-toggle
              .logo
                img(src="/images/logo.png" style="width:5rem;")
              .menu-items
                .menu
                  ul
                    li
                      a(href=`/profile/instructor/courses?ee11cbb19052e40b07aac0ca060c23ee=${id}`) - Cursos
                    li
                      a(href=`/instructor-student-list?ee11cbb19052e40b07aac0ca060c23ee=${id}`) - Certificados
                    li
                      a(href=`/login`) - Salir      
                    li.img-profile(style="")
                      form(action="/upload", method="post", enctype="multipart/form-data" style="width:60px;")
                        input(type="hidden", name="id", value=id)
                        label.custom-file-upload(for="file-upload")
                            input#file-upload(type="file" name="file" onchange="handleFileChange(this)")
                            img(src=`/uploads/${foto}`, alt="Avatar" style="")
                        button#guardar-btn(type="submit", style="display: none;width: 100%;") Guardar
    br
    br
    br
    br
    br
    a(href=`/profile/instructor/courses?ee11cbb19052e40b07aac0ca060c23ee=${id}` class="btn-nav") BACK 
    if listaEstudiantes.length == 0
      h1(style="text-align:center;color:black;") Vacio
    if listaEstudiantes.length > 0
      div(class="")
        .main-content(style="width:100%;")
          br
          h3 Estudiantes
          br
          table
            thead
              tr
                th Nombre
                th Tipo Cedula
                th Cedula
                th Nacionalidad
                th Aca Codigo
                th Email
                th Telefono
                th Sangre
                th Acciones
            tbody
                each item in listaEstudiantes
                  tr
                    td
                      p.tableInfoField Nombre: 
                      = item.nombre
                    td
                      p.tableInfoField Tipo Cedula: 
                      = item.tipo_cedula
                    td
                      p.tableInfoField Cedula: 
                      = item.cedula
                    td
                      p.tableInfoField Nacionalidad: 
                      = item.nacionalidad
                    td
                      p.tableInfoField Aca Codigo: 
                      = item.aca_codigo
                    td
                      p.tableInfoField Email: 
                      = item.email
                    td
                      p.tableInfoField Telefono: 
                      = item.telefono
                    td
                      p.tableInfoField Sangre: 
                      = item.sangre
                    if item.cursoVerificado == 0 || item.cursoVerificado == '0'
                      td.actions
                        p No Verified
                    else
                      td.actions
                        form(action="/profile/instructor/courses/students/evaluation", method="get")
                            input(type="hidden", name="id" value=id)
                            input(type="hidden", name="cid" value=cid)
                            input(type="hidden", name="eid" value=item.id)
                            button(type="submit") Calificar
    //- ====================== Footer Section started======================
    a(href="https://api.whatsapp.com/send?phone=50660437366", class="btnWhatsapp", id="btnWhatsapp", target="_blank")
      img(src="https://www.freepnglogos.com/uploads/whatsapp-logo-png-transparent-33.png", style="width:100%", alt="whatsapp button")
    footer
      .container
        .row
          .col-lg-3.col-md-3.col-sm-6.col-12
            .__kl_de_w
              h3 SARAPIQUI PADDLE SPORT
              p Come discover the best water adventures in Costa Rica with Sarapiquí Paddle Sports.
          .col-lg-3.col-md-3.col-sm-6.col-12
            .__kl_de_w
              h3 Quick Links
              ol
                li(style="text-align:center;margin-top:1rem;")
                  i.fa-solid.fa-angle-right
                    a(href=`/profile/instructor/courses?ee11cbb19052e40b07aac0ca060c23ee=${id}` style="color:white;font-family:Font Awesome 6 Free;text-transform:none;font-size: 1rem;")  Cursos
                li(style="text-align:center;margin-top:1rem;")
                  i.fa-solid.fa-angle-right
                    a(href=`/instructor-student-list?ee11cbb19052e40b07aac0ca060c23ee=${id}` style="color:white;font-family:Font Awesome 6 Free;text-transform:none;font-size: 1rem;")  Certificados
                li(style="text-align:center;margin-top:1rem;")
                  i.fa-solid.fa-angle-right
                    a(href=`/login` style="color:white;font-family:Font Awesome 6 Free;text-transform:none;font-size: 1rem;")  Salir
          .col-lg-3.col-md-3.col-sm-6.col-12
            .__kl_de_w
              h3 Contact Us
              form#emailForm
                .form-group
                  input(type="email", name="email", placeholder="Your Email", required)
                .form-group
                  textarea(name="text", placeholder="Message")
                .form-group  
                  button(type="submit") Submit
          .col-12
            .copy-right
              p © 2024 Sarapiqui Paddle Sports
