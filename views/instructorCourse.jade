    section.section-concern(style="min-height:50vh;")
      h2 #{course.name}
      div(class="about-container")
        div(style="width:100%;")
          div.tab
            - var index = 0;
            each itemKey, key in Object.keys(course['items'])
              button.tablinks(onclick=`openTab(event, ${index})`) #{itemKey}
              - index++;

          - index = 0;
          each itemKey, key in Object.keys(course['items'])
            if index == 0
              div.tabcontent.active(id=`tab-${index}`)
                each item in course['items'][itemKey]
                  //p #{item.name}
                  a(href=`${item.link}`) #{item.name}
                  br
            else
              div.tabcontent(id=`tab-${index}`)
                each item in course['items'][itemKey]
                  //p #{item.name}
                  a(href=`${item.link}`) #{item.name}
                  br
            - index++;
          

          

